<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="partner_manage.list">
            <field name="name">partner_manage list</field>
            <field name="model">partner_manage.partner_manage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="value"/>
                    <field name="value2"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="partner_manage.action_window">
            <field name="name">partner_manage window</field>
            <field name="res_model">partner_manage.partner_manage</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
        <record model="ir.actions.server" id="partner_manage.action_server">
            <field name="name">partner_manage server</field>
            <field name="model_id" ref="model_partner_manage_partner_manage"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": model._name,
                }
            </field>
        </record>
    </data>
</odoo>