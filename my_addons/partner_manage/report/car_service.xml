<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_maintain_order">
            <t t-foreach="docs" t-as="order">
                <t t-call="web.html_container">
                    <div class="page">
                        <div style="width: 100%;">
                            <div style="margin-top: 5px;margin: auto;">
                                <div id="Head">
                                    <table cellpadding="0" cellspacing="0" class="T">
                                        <tbody>
                                            <tr>
                                                <td style="width:25%">
                                                    <span>
                                                        <span class="font-size">账单流水号：
                                                        </span>
                                                        <span class="font-size" t-field="order.name"/>
                                                    </span>
                                                </td>
                                                <!--  todo 修正标题:增加字段,区别报表标题  -->
                                                <td style="width: 50%; text-align: center;">
                                                    <h2>奔驰</h2>

                                                </td>
                                                <td style="width:25%">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="width: 100%; text-align: center;height:20px;"
                                                    colspan="3">
                                                    <table class="T1" cellpadding="0" cellspacing="0"
                                                           style="width: 100%;">
                                                        <tbody>
                                                            <tr>
                                                                <td style="width: 100%; text-align: left;height:20px;">
                                                                    <table cellpadding="0" cellspacing="0"
                                                                           style="width: 100%; ">
                                                                        <tbody>
                                                                            <tr>
                                                                                <td style="width: 25%; font-size: 13px;height:20px;">
                                                                                    <span class="font-size">车牌号：
                                                                                    </span>
                                                                                    <span class="font-size"
                                                                                          t-field="order.name"/>
                                                                                </td>
                                                                                <td style="width:25%; font-size: 13px;height:20px;">
                                                                                    <span class="font-size">订单号：
                                                                                    </span>
                                                                                    <span class="font-size"
                                                                                          t-field="order.order_no"/>

                                                                                </td>
                                                                                <td style="width: 25%; font-size: 13px;height:20px;">
                                                                                    <span class="font-size">打印日期：
                                                                                    </span>
                                                                                    <span class="font-size"
                                                                                          t-field="order.print_date"/>
                                                                                </td>
                                                                                <td style="width: 25%; font-size: 13px;height:20px;">
                                                                                    <span class="font-size">修理日期：
                                                                                    </span>
                                                                                    <span class="font-size"
                                                                                          t-field="order.repair_date"/>
                                                                                </td>
                                                                            </tr>
                                                                        </tbody>
                                                                    </table>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
